{
  "name": "sample-auth0-react-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Vitalik Hyliavsky",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "src/*"
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:backend": "yarn workspace backend dev",
    "dev:frontend-react": "yarn workspace frontend-react start",
    "fix": "run-s typecheck lint format",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix ./src",
    "format": "prettier --write -l \"./src/**/*.{js,ts,graphql}\"",
    "test": "run-s test:*",
    "test:backend": "yarn workspace backend test",
    "codegen": "run-s codegen:*",
    "codegen:backend": "yarn workspace backend codegen",
    "codegen:frontend-react": "yarn workspace frontend-react codegen",
    "clean": "run-p clean:*",
    "clean:backend": "yarn workspace backend clean",
    "clean:frontend-react": "yarn workspace frontend-react clean",
    "build": "run-s codegen build:*",
    "build:backend": "yarn workspace backend build",
    "build:frontend-react": "yarn workspace frontend-react build",
    "rebuild": "run-s codegen rebuild:*",
    "rebuild:backend": "yarn workspace backend rebuild",
    "rebuild:frontend-react": "yarn workspace frontend-nextjs rebuild"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.7",
    "@graphql-codegen/fragment-matcher": "^1.17.7",
    "@graphql-codegen/introspection": "^1.17.7",
    "@graphql-codegen/schema-ast": "^1.17.7",
    "@graphql-codegen/typescript": "^1.17.7",
    "@graphql-codegen/typescript-document-nodes": "^1.17.7",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.17.7",
    "@graphql-codegen/typescript-operations": "^1.17.7",
    "@graphql-codegen/typescript-react-apollo": "^2.0.5",
    "@graphql-codegen/typescript-resolvers": "^1.17.7",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "graphql": "^15.3.0",
    "husky": "^4.3.0",
    "jest": "^26.3.0",
    "jest-cli": "^26.3.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^4.1.2"
  }
}